<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_corner_radius_medium"/>
            <solid android:color="@color/colorTextSuccess"/>
            <stroke android:width="1dip" android:color="@color/colorTextSuccess"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_corner_radius_medium"/>
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dip" android:color="@color/colorTextCancel"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_corner_radius_medium"/>
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dip" android:color="@color/colorTextCancel"/>
        </shape>
    </item>
</selector>
